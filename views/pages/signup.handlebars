<div class="row">
    <div class="col">
        <form id="register-form" name="register-form" method="post" action="/register">

            <div class="form-group row">
                <label class="col-1 col-form-label" for="username">Username: </label>
                <div class="col-6">
                    <input class="form-control" type="text" name="username" id="username">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-1 col-form-label" for="password">Password: </label>
                <div class="col-6">
                    <input class="form-control" type="password" name="password" id="password">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-1 col-form-label" for="email">Email: </label>
                <div class="col-6">
                    <input class="form-control" type="email" name="email" id="email">
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>

            <div id="loginWarning" class="row alert alert-warning alert-dismissible d-none">
                Please fill in the highlighted field(s).
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        </form>
    </div>
</div>
