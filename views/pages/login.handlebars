<div class="alert alert-danger {{#if showMsg}} {{else}}d-none{{/if}}" role="alert">
    {{msg}}
</div>

<div class="row">
    <div class="col">
        <form id="login-form" name="login-form" method="post" action="/login">

            <div class="form-group row">
                <label class="col-1 col-form-label" for="username">Username: </label>
                <div class="col-6">
                    <input class="form-control" type="text" name="username" id="username">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-1 col-form-label" for="password">Password: </label>
                <div class="col-6">
                    <input class="form-control" type="password" name="password" id="password">
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group">
                    <button class="btn btn-primary" type="submit">Log In</button>
                    <a href="/signup" class="btn btn-warning float-right" role="button">Register</a>
                </div>
            </div>

            <div id="loginWarning" class="row alert alert-warning alert-dismissible d-none">
                Please fill in the highlighted field(s).
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        </form>
    </div>
</div>
